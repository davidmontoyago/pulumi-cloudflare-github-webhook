# Copy this file to .env and fill in your values

# Required: Cloudflare API Token (requires Workers Scripts:Edit and DNS:Edit permissions)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id-here
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id-here

# Required: Path to the JS file with the "handle" function to run after webhook authentication
# The JS file must implement: async function handle(githubEvent, payload, env)
WORKER_HANDLER_SCRIPT_PATH=./handler.js

# Required: Github webhook secret key for payload signature verification
# Set this in your GitHub repository settings: Settings -> Webhooks -> Add webhook
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here

# Optional: Worker domain URL (subdomain of your Cloudflare zone)
WORKER_DOMAIN_URL=workers.yourdomain.dev

# Optional: Worker path for the webhook endpoint
WORKER_PATH=/webhook/v1/fetch

# Optional: Resource prefix for the webhook resources in Cloudflare
RESOURCE_PREFIX=ci-webhook
